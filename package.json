{
    "name": "attendance-management",
    "version": "1.0.0",
    "scripts": {
        "start": "npm run dev",
        "client": "npm.cmd run dev --prefix client",
        "server": "npm.cmd run dev --prefix server",
        "dev": "concurrently \"npm.cmd run server\" \"npm.cmd run client\"",
        "build": "cd client && npm install && npm run build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "dependencies": {
        "axios": "^1.13.3",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.6",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "geolib": "^3.3.4",
        "json2csv": "^6.0.0-alpha.2",
        "jsonwebtoken": "^9.0.3",
        "mongodb-memory-server": "^11.0.1",
        "mongoose": "^9.1.5",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.12",
        "qrcode": "^1.5.4",
        "socket.io": "^4.8.3"
    }
}
